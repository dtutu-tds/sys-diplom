server {
    listen 80;
    server_name _;
    
    root /var/www/site;
    index index.html;
    
    access_log /var/log/nginx/access.log combined;
    error_log /var/log/nginx/error.log warn;
    
    location / {
        try_files $uri $uri/ =404;
    }
    
    # Health check endpoint
    location /health {
        access_log off;
        return 200 "OK\n";
        add_header Content-Type text/plain;
    }
}
